<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Rooms</title>
    <link rel="stylesheet" href="/css/chat.css"> <!-- à¸¥à¸´à¸‡à¸à¹Œà¹„à¸›à¸¢à¸±à¸‡ CSS -->
</head>
<body>
    <div class="chat-container">
        <h1>Available Chat Rooms</h1>
        <% if (chatRooms && chatRooms.length > 0) { %>
            <div class="chat-list">
                <% chatRooms.forEach(room => { %>
                    <div class="chat-room">
                        <div class="chat-info">
                            <% if (room.receiver_avatar) { %>
                                <img src="data:image/png;base64,<%= room.receiver_avatar.toString('base64') %>" 
                                    alt="Receiver Avatar" class="avatar">
                            <% } else { %>
                                <img src="/IMG/default-avatar.png" alt="Default Avatar" class="avatar">
                            <% } %>
                            <div class="room-details">
                                <h3><%= room.receiver_name %></h3>
                            </div>
                        </div>
                        <form action="/room/<%= room.room_id %>/<%= room.receiver_id %>" method="get">
                            <button type="submit" onclick="goToChat('<%= room.room_id %>', '<%= room.receiver_id %>')">Enter Chat</button>
                        </form>
                        
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p>No chat rooms available.</p>
        <% } %>
    </div>

    <script>
        // ðŸ“Œ à¹€à¸¡à¸·à¹ˆà¸­à¹‚à¸«à¸¥à¸”à¸«à¸™à¹‰à¸²à¹€à¸§à¹‡à¸š à¹ƒà¸«à¹‰à¹€à¸¥à¸·à¹ˆà¸­à¸™à¹„à¸›à¸—à¸µà¹ˆà¹à¸Šà¸—à¸¥à¹ˆà¸²à¸ªà¸¸à¸”
        function scrollToBottom() {
            const chatList = document.getElementById("chat-list");
            chatList.scrollTop = chatList.scrollHeight;
        }
    
        // âœ… à¹€à¸£à¸µà¸¢à¸à¹ƒà¸Šà¹‰à¹€à¸¡à¸·à¹ˆà¸­à¹‚à¸«à¸¥à¸”à¸«à¸™à¹‰à¸²à¹€à¸§à¹‡à¸šà¹€à¸ªà¸£à¹‡à¸ˆ
        window.onload = () => {
            scrollToBottom();
        };
    </script>
    

</body>
</html>
